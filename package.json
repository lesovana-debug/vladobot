{
  "name": "vlabobot",
  "version": "1.0.0",
  "description": "Telegram bot for daily chat summaries with voice/video transcription",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/migrations/migrate.ts",
    "seed": "tsx src/scripts/seed.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "preview": "tsx src/scripts/preview.ts",
    "clean": "rm -rf dist"
  },
  "keywords": ["telegram", "bot", "summarization", "transcription", "whisper"],
  "author": "VladoBot",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.16.3",
    "better-sqlite3": "^11.5.0",
    "node-cron": "^3.0.3",
    "openai": "^4.58.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "axios": "^1.7.7",
    "pino": "^9.3.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "@types/node": "^22.5.5",
    "@types/better-sqlite3": "^7.6.8",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.6.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18"
  }
}
